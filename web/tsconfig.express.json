{
    "compilerOptions": {
      "target": "ES2022",
      "lib": ["ES2023"],
      "module": "ESNext",
      "skipLibCheck": true,
      "esModuleInterop": true,
      "rootDir": "./src",
      "outDir": "./src/dist",
  
      /* Bundler mode */
    "moduleResolution": "bundler",
      "isolatedModules": true,
      "moduleDetection": "force",
      "noEmit": false,
  
      /* Linting */
      "strict": true,
      "noUnusedLocals": true,
      "noUnusedParameters": true,
      "noFallthroughCasesInSwitch": true
    },
    "include": ["src/app.ts"]
  }
  